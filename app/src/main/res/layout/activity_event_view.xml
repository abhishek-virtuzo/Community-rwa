<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context="virtuzo.abhishek.community.activity.EventViewActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appBarLayout"
        android:background="#10000000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:theme="@style/unnamedToolbarTheme"
            android:layout_height="?attr/actionBarSize" />

    </android.support.design.widget.AppBarLayout>

    <ProgressBar
        android:id="@+id/loadingProgressBar"
        android:visibility="gone"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="3dp"
            app:cardCornerRadius="4dp">
            <!--android:background="#fafafa"-->

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="220dp">

                    <ImageView
                        android:id="@+id/eventImageView"
                        android:src="@drawable/image_background"
                        android:scaleType="fitXY"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                    <ProgressBar
                        android:id="@+id/eventImageProgressBar"
                        style="?android:attr/progressBarStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:backgroundTint="@color/colorPrimary" />

                    <TextView
                        android:id="@+id/imageNotFoundTextView"
                        android:text="Image not found"
                        android:visibility="gone"
                        android:layout_centerInParent="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </RelativeLayout>

                <TextView
                    android:layout_margin="20dp"
                    android:id="@+id/eventTitleTextView"
                    android:text="Event Title"
                    android:textSize="24sp"
                    android:textColor="@color/black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#e6e6e6" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="12dp"
                    android:orientation="horizontal">
                    <!--android:background="#fafafa"-->

                    <LinearLayout
                        style="@style/PB_Layout">

                        <LinearLayout
                            android:id="@+id/interestedButtonView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:clickable="true"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/interestedImageView"
                                style="@style/PB_Icon"
                                android:src="@drawable/star" />

                            <TextView
                                android:id="@+id/interestedTextView"
                                style="@style/PB_Title"
                                android:text="@string/text_interested" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        style="@style/PB_Layout">

                        <LinearLayout
                            android:id="@+id/mapsButtonView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:clickable="true"
                            android:orientation="vertical">

                            <ImageView
                                style="@style/PB_Icon"
                                android:src="@drawable/map" />

                            <TextView
                                style="@style/PB_Title"
                                android:text="@string/text_map" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        style="@style/PB_Layout">

                        <LinearLayout
                            android:id="@+id/shareButtonView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:clickable="true"
                            android:orientation="vertical">

                            <ImageView
                                style="@style/PB_Icon"
                                android:src="@drawable/share" />

                            <TextView
                                style="@style/PB_Title"
                                android:text="@string/text_share" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        style="@style/PB_Layout">

                        <LinearLayout
                            android:id="@+id/calendarButtonView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:clickable="true"
                            android:orientation="vertical">

                            <ImageView
                                style="@style/PB_Icon"
                                android:src="@drawable/add_to_calendar" />

                            <TextView
                                style="@style/PB_Title"
                                android:text="@string/text_add_to_calendar" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#e6e6e6" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_marginBottom="16dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/imageView9"
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:layout_above="@+id/imageView10"
                            app:srcCompat="@drawable/timings" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:id="@+id/timingsTextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="10dp"
                                android:textColor="@color/colorText"
                                android:text="Timings" />

                        </RelativeLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/imageView10"
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:layout_marginBottom="10dp"
                            app:srcCompat="@drawable/address" />

                        <TextView
                            android:id="@+id/venueTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:textColor="@color/colorText"
                            android:text="Venue" />
                        <!--android:layout_marginTop="10dp"-->

                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#e6e6e6" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/imageView11"
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:layout_marginBottom="10dp"
                            app:srcCompat="@drawable/information" />

                        <TextView
                            android:id="@+id/descriptionTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginBottom="10dp"
                            android:textColor="@color/colorText"
                            android:text="Description" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>

    </ScrollView>

</RelativeLayout>
